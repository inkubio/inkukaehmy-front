{
  "name": "inku-kaehmy-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "dev": "webpack --mode=development",
    "build": "(export NODE_ENV=production && webpack --mode=production)",
    "deploy-local": "npm run build && cp dist/bundle.js ~/code/suur-inkubio/assets/bundles/kahmy.js",
    "deploy-remote": "npm run build && scp dist/bundle.js inkubio@otax.fi:~/www-data/wp-content/themes/suurinkubio/assets/bundles/kahmy.js",
    "stats": "webpack --json > stats.json"
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^3.0.1",
    "autoprefixer": "9.5.1",
    "babel-jest": "24.7.1",
    "babel-loader": "8.0.5",
    "babel-preset-react-app": "8.0.0",
    "chalk": "2.4.2",
    "dotenv": "7.0.0",
    "dotenv-expand": "5.1.0",
    "draft-js": "0.10.5",
    "file-loader": "3.0.1",
    "fs-extra": "7.0.1",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "promise": "8.0.3",
    "raf": "3.4.1",
    "react": "16.8.6",
    "react-dev-utils": "9.0.0",
    "react-dom": "16.8.6",
    "react-router-dom": "5.0.0",
    "resolve": "1.10.1",
    "source-map-loader": "0.2.4",
    "tinymce": "^5.2.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.0.0",
    "url-loader": "1.1.2",
    "whatwg-fetch": "3.0.0"
  },
  "devDependencies": {
    "@types/draft-js": "0.10.30",
    "@types/jest": "24.0.12",
    "@types/node": "11.13.8",
    "@types/react": "16.8.15",
    "@types/react-dom": "16.8.4",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "4.3.2",
    "@types/tinymce": "^4.5.20",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-ts": "^3.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "prettier": "^1.17.0",
    "style-loader": "0.23.1",
    "ts-loader": "5.4.5",
    "typescript": "^3.4.5",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
